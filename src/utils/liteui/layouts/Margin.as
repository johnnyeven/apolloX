package utils.liteui.layouts
{
	public class Margin
	{
		public var top: Number;
		public var right: Number;
		public var bottom: Number;
		public var left: Number;
		
		public function Margin(top: Number = 0, right: Number = 0, bottom: Number = 0, left: Number = 0)
		{
			this.top = top;
			this.right = right;
			this.bottom = bottom;
			this.left = left;
		}
	}
}